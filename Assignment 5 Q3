#include <iostream>
using namespace std;

struct Node {
    int data;
    Node *next;
};

Node* createList() {
    Node *head = NULL, *temp = NULL, *newNode;
    int n, val;
    cout << "Enter number of nodes: ";
    cin >> n;
    for (int i = 0; i < n; i++) {
        cout << "Enter value: ";
        cin >> val;
        newNode = new Node();
        newNode->data = val;
        newNode->next = NULL;
        if (head == NULL)
            head = temp = newNode;
        else {
            temp->next = newNode;
            temp = newNode;
        }
    }
    return head;
}

void findMiddle(Node *head) {
    if (head == NULL) {
        cout << "List is empty";
        return;
    }
    Node *slow = head, *fast = head;
    while (fast != NULL && fast->next != NULL) {
        slow = slow->next;
        fast = fast->next->next;
    }
    cout << "Middle node is: " << slow->data;
}

void display(Node *head) {
    Node *temp = head;
    while (temp != NULL) {
        cout << temp->data << "->";
        temp = temp->next;
    }
    cout << "NULL" << endl;
}

int main() {
    Node *head = createList();
    cout << "Linked List: ";
    display(head);
    findMiddle(head);
    return 0;
}
