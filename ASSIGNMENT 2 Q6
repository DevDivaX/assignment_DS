// 6 (a) Transpose of a matrix
#include <iostream>
using namespace std;
int main(){
    int t[10][3],m[10][3],r,c,n;
    cout<<"Enter rows cols terms: ";
    cin>>r>>c>>n;
    cout<<"Enter triplet form:\n";
    for(int i=0;i<n;i++)
        cin>>m[i][0]>>m[i][1]>>m[i][2];
    for(int i=0;i<n;i++){
        t[i][0]=m[i][1];
        t[i][1]=m[i][0];
        t[i][2]=m[i][2];
    }
    cout<<"Transpose:\n";
    for(int i=0;i<n;i++)
        cout<<t[i][0]<<" "<<t[i][1]<<" "<<t[i][2]<<endl;
}
