#include <iostream>
using namespace std;

struct Node {
    int data;
    Node *next;
};

Node* createList() {
    Node *head = NULL, *temp = NULL, *newNode;
    int n, val;
    cout << "Enter number of nodes: ";
    cin >> n;
    for (int i = 0; i < n; i++) {
        cout << "Enter value: ";
        cin >> val;
        newNode = new Node();
        newNode->data = val;
        newNode->next = NULL;
        if (head == NULL)
            head = temp = newNode;
        else {
            temp->next = newNode;
            temp = newNode;
        }
    }
    return head;
}

Node* reverseList(Node *head) {
    Node *prev = NULL, *curr = head, *next = NULL;
    while (curr != NULL) {
        next = curr->next;
        curr->next = prev;
        prev = curr;
        curr = next;
    }
    return prev;
}

void display(Node *head) {
    Node *temp = head;
    while (temp != NULL) {
        cout << temp->data << "->";
        temp = temp->next;
    }
    cout << "NULL" << endl;
}

int main() {
    Node *head = createList();
    cout << "Original Linked List: ";
    display(head);
    head = reverseList(head);
    cout << "Reversed Linked List: ";
    display(head);
    return 0;
}
