// 1) Implement the binary search algorithm regarded as a fast search algorithm with run-time complexity of ÎŸ(log n) in comparison to the Linear Search.
#include <iostream>
using namespace std;
int main(){
    int n,key;
    cout<<"Enter size: ";
    cin>>n;
    int a[n];
    cout<<"Enter elements (sorted): ";
    for(int i=0;i<n;i++) cin>>a[i];
    cout<<"Enter key: ";
    cin>>key;
    int l=0,h=n-1,mid,f=0;
    while(l<=h){
        mid=(l+h)/2;
        if(a[mid]==key){
            cout<<"Found at position "<<mid+1;
            f=1;
            break;
        }
        else if(a[mid]<key) l=mid+1;
        else h=mid-1;
    }
    if(f==0) cout<<"Not found";
}
